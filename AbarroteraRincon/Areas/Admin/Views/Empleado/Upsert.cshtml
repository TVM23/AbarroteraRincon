@model AbarroteraRincon.Modelos.ViewModels.EmpleadoVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var titulo = "Ingresar Empleado Nuevo";
}

<form method="post" enctype="multipart/form-data">
    @if (Model.Empleado.Id != 0)
    {
        titulo = "Editar Empleado";
        <input asp-for="Empleado.Id" hidden />
    }
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <h2 class="text-info">@titulo</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="container">
                    <!-- Campo A.Paterno  -->
                    <div class="row">
                        <div class="col-md-6">
                            <label>Apellido Paterno</label>
                            <input asp-for="Empleado.Apaterno" class="form-control" />
                            <span asp-validation-for="Empleado.Apaterno" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Campo A.Materno  -->
                    <div class="row">
                        <div class="col-md-6">
                            <label>Apellido Materno</label>
                            <input asp-for="Empleado.Amaterno" class="form-control" />
                            <span asp-validation-for="Empleado.Amaterno" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Campo Nombre  -->
                    <div class="row">
                        <div class="col-md-6">
                            <label>Nombre</label>
                            <input asp-for="Empleado.Nombre" class="form-control" />
                            <span asp-validation-for="Empleado.Nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Campo Direccion  -->
                    <div class="row">
                        <div class="col-md-6">
                            <label>Dirección</label>
                            <input asp-for="Empleado.Direccion" class="form-control" />
                            <span asp-validation-for="Empleado.Direccion" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Campo Telefono  -->
                    <div class="row">
                        <div class="col-md-6">
                            <label>Teléfono</label>
                            <input asp-for="Empleado.Telefono" class="form-control" />
                            <span asp-validation-for="Empleado.Telefono" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Lista Puesto -->
                    <div class="row">
                        <div class="col-md-6">
                            <label>Puesto</label>
                            <select asp-for="Empleado.PuestoId" asp-items="@Model.PuestoLista" class="form-select">
                                <option disabled selected>-- Selcciona un Puesto --</option>
                            </select>
                            <span asp-validation-for="Empleado.PuestoId" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Lista Area -->
                    <div class="row">
                        <div class="col-md-6">
                            <label>Area</label>
                            <select asp-for="Empleado.AreaPId" asp-items="@Model.AreaPLista" class="form-select">
                                <option disabled selected>-- Selcciona un Area --</option>
                            </select>
                            <span asp-validation-for="Empleado.AreaPId" class="text-danger"></span>
                        </div>
                    </div>
                    <!--  Botones -->
                    <br />
                    <div class="d-grid gap-2 d-md-block">
                        @if (Model.Empleado.Id != 0)
                        {
                            <partial name="_botonesActualizarYRegresar" model="Model.Empleado.Id" />
                        }
                        else
                        {
                            <button type="submit" onclick="return" class="btn btn-primary">
                                Crear
                            </button>
                            <a asp-action="Index" class="btn btn-success">
                                Regresar
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>

    </script>
}


